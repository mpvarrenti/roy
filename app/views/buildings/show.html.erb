<div class="col-md-7">
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Lights</th>
        <th></th>
        <th>Admin</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      <% for option in @options %>
        <tr>
          <td><%= option.id %></td>
          <td><%= option.name %></td>
          <td><%= OptionLight.all.where(option_id:option.id).count %></td>
          <td><%= link_to "View", option_path(option)%></td>
          <td><%= button_to 'Delete', option_path(option), method: :delete, class: "btn btn-xs btn-danger" %></td>
          <td><%= option.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-4">
  <%= link_to "Add New Layout Option", new_option_path(building: {id:@building.id}), class: "btn btn-default", roll: "button" %>
</div>
